{
  "name": "trakify",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "deploy": "ng deploy",
    "lint": "ng lint --fix",
    "lint:check": "ng lint",
    "format": "prettier . --write",
    "format:check": "prettier . --list-different",
    "fix": "yarn format && yarn lint",
    "e2e": "ng e2e",
    "cypress:run": "cypress run",
    "gen:import-graph": "npx madge src\\main.ts --ts-config tsconfig.app.json --image ./docs/import-graph.svg --layout dot"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "yarn@1.22.22",
  "dependencies": {
    "@angular/cdk": "^21.1.3",
    "@angular/common": "^21.1.3",
    "@angular/compiler": "^21.1.3",
    "@angular/core": "^21.1.3",
    "@angular/fire": "20.0.1",
    "@angular/forms": "^21.1.3",
    "@angular/material": "^21.1.3",
    "@angular/platform-browser": "^21.1.3",
    "@angular/router": "^21.1.3",
    "@angular/service-worker": "^21.1.3",
    "@tanstack/angular-query-experimental": "^5.90.25",
    "angular-oauth2-oidc": "^20.0.2",
    "date-fns": "^4.1.0",
    "ngxtension": "7.1.0",
    "photoswipe": "^5.4.4",
    "rxjs": "~7.8.2",
    "static-path": "^0.0.4",
    "tslib": "^2.8.1",
    "zod": "^4.3.6",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.2",
    "@angular/cli": "^21.1.2",
    "@angular/compiler-cli": "^21.1.3",
    "@cypress/schematic": "4.3.0",
    "@vitest/browser-playwright": "^4.0.18",
    "angular-eslint": "^21.2.0",
    "cypress": "^15.10.0",
    "eslint": "^9.39.2",
    "playwright": "^1.58.1",
    "prettier": "^3.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
